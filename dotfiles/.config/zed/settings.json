// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette
{
  "show_edit_predictions": true,
  "features": {
    "edit_prediction_provider": "zed"
  },
  "assistant": {
    "default_profile": "write",
    "default_model": {
      "provider": "anthropic",
      "model": "claude-3-7-sonnet-latest"
    },
    "version": "2",
    "enabled": true
  },
  "toolbar": {
    "breadcrumbs": false,
    "quick_actions": false,
    "selections_menu": false
  },
  "tab_bar": { "show": true },
  "scrollbar": { "show": "auto" },
  "buffer_font_family": "JetBrainsMono Nerd Font",
  "ui_font_family": "JetBrainsMono Nerd Font",
  "ui_font_size": 14,
  "buffer_font_size": 14,
  "theme": {
    "mode": "dark",
    "light": "Monospace dark",
    "dark": "Monospace dark"
  },
  "icon_theme": {
    "mode": "dark",
    "light": "Monospace Icon Theme - Dark",
    "dark": "Monospace Icon Theme - Dark"
  },
  "vim_mode": true,
  "vim": {
    "toggle_relative_line_numbers": true,
    "use_system_clipboard": "always"
  },
  "format_on_save": "off",
  "lsp": {
    "rust-analyzer": {
      "initialization_options": {
        "checkOnSave": {
          "command": "clippy"
        }
      }
    },
    "zls": {
      "settings": {
        "enable_build_on_save": true,
        "enable_autofix": true,
        "warn_style": true,
        "highlight_global_var_declarations": true
      }
    }
  },
  "languages": {
    "zig": {
      "formatter": {
        "external": {
          "command": "zig fmt"
        }
      }
    },
    "Rust": {
      "formatter": {
        "external": {
          "command": "bash",
          "arguments": [
            "-c",
            "set -o pipefail; dx fmt -f - | rustfmt --edition 2021"
          ]
        }
      }
    }
  },
  "experimental.theme_overrides": {
    "renamed.background": "#FFFFFF20",
    "search.match_background": "#FFFFFF20",
    "ghost_element.background": "#00000010",
    "ghost_element.hover": "#00000099",
    "background.appearance": "blurred",
    "background": "#000000CC",
    "editor.background": "#00000010",
    "editor.gutter.background": "#00000010",
    "title_bar.background": "#000000DF",
    "toolbar.background": "#00000010",
    "terminal.background": "#00000000",
    "status_bar.background": "#000000DF",
    "tab.active_background": "#111111CC",
    "tab.inactive_background": "#00000000",
    "tab_bar.background": "#00000010",
    "panel.background": "#00000010",
    "border": "#00000000",
    "border.variant": "#00000000",
    "scrollbar.track.border": "#00000000",
    "scrollbar.track.background": "#00000000",
    "scrollbar.thumb.background": "#00000000",
    "scrollbar.thumb.hover.background": "#00000000",
    "scrollbar.thumb.active.background": "#00000000",
    "scrollbar.thumb.border": "#FFFFFF90",
    "editor.line_highlight": "#00000000",
    "editor.active_line.background": "#00000000",
    "editor.selection.background": "#00000000",
    "editor.selection.foreground": "#00000000",
    "editor.selection.border": "#00000000",
    "editor.selection.inactive.foreground": "#00000000",
    "editor.selection.inactive.border": "#00000000",
    "editor.selection.active.background": "#00000000",
    "editor.selection.active.foreground": "#00000000",
    "editor.selection.active.border": "#00000000",
    "editor.selection.inactive.background": "#00000000"
  },
  "auto_install_extensions": {
    "ansible": true,
    "astro": true,
    "basher": true,
    "blackfox": true,
    "blade": true,
    "catppuccin": true,
    "csharp": true,
    "dart": true,
    "dockerfile": true,
    "elixir": true,
    "erlang": true,
    "fsharp": true,
    "gleam": true,
    "graphql": true,
    "haskell": true,
    "helm": true,
    "html": true,
    "ini": true,
    "java": true,
    "just": true,
    "kanagawa-themes": true,
    "latex": true,
    "lua": true,
    "make": true,
    "monospace-icon-theme": true,
    "monospace-theme": true,
    "nim": true,
    "nix": true,
    "nvim-nightfox": true,
    "odin": true,
    "one-dark-pro-monokai-darker": true,
    "oxocarbon": true,
    "php": true,
    "powershell": true,
    "proto": true,
    "python-requirements": true,
    "r": true,
    "roc": true,
    "ruby": true,
    "scala": true,
    "scheme": true,
    "scss": true,
    "sql": true,
    "svelte": true,
    "swift": true,
    "templ": true,
    "terraform": true,
    "toml": true,
    "vue": true,
    "xml": true,
    "zig": true
  }
}
